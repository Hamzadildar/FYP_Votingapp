<%- include ('partials/voterheader') %>


<section class="form my-4 mx-5">
  <div class="container">
      <div class="row no-gutters">
          <div class="col-lg-5">
              <img src="./form.jpg" class="img-fluid" alt="">
          </div>
          <div class="col-lg-7 px-5 pt-5">
              <h1 class="font-weight-bold py-3"> Cast Vote!</h1>
              

              <form action="/castVote" method="POST">


                  <div class="form-row">
                      <div class="col-lg-7">
                          <input type="text" placeholder="BlockChain Name" name="blockChainName" value="<%=bcName%>"
                              class="form-control my-2 p-3" required>
                      </div>
                  </div>
                  


                  <div class="form-row">
                      <div class="col-lg-7">

                          <input type="text" class="form-control my-2 p-3"
                               required minlength="13" maxlength="13"
                              placeholder="CNIC" name="CNIC">

                      </div>
                  </div>



                  <div class="form-row">
                      <div class="col-lg-7">
                          <input type="Password" name="key" placeholder="Voter Key" class="form-control my-2 p-3"
                              required>
                      </div>
                  </div>

                  <div class="form-row">
                    <div class="col-lg-7">
                      <select  class="mdb-select md-form" name="Candidate">
                        <option value="" disabled selected>Choose A Candidate</option>
                        <% for(var i=1 ; i < data.length;i++) { %>
                          <h1></h1>
                          <option  value=<%= data[i].hash %>><%= data[i].data.Name %></option>
                        <% } %>
                      </select>
                    </div>
                      
                      

                  </div>

                  <div class="form-row">
                      <div class="col-lg-7">
                          <button type="submit" class="btn1 mt-2 mb-3"> Submit </button>
                      </div>
                  </div>




              </form>
          </div>
      </div>
  </div>
</section>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
