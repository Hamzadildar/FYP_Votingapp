<section class="form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="./form.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Add Candidate In Polling !</h1>
                    <h4>Add Candidate here! <%= msg %></h4>

                    <form action="/createCandidate" method="POST">


                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="PollingName" name="blockChainName" value="<%=bcName%>"  class="form-control my-2 p-3" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" placeholder="Canidate Name"  name="Name" class="form-control my-2 p-3" required>
                            </div>
                        </div>



                        <div class="form-row">
                            <div class="col-lg-7">

                                <input type="text" class="form-control my-2 p-3"
                                     required minlength="13" maxlength="13"
                                    placeholder="CNIC" name="CNIC">

                            </div>
                        </div>


                        <div class="form-row">
                            <div class="col-lg-7">

                                <strong>Ballot Icon:</strong><input type="file" name="Icon" class="form-control-file my-1 p-2"
                                    required>
                                <!-- <input type="text" class="form-control my-2 p-3"
                                   placeholder="Key" name="key"> -->
                            </div>
                        </div>



                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 mt-2 mb-3"> Submit </button>
                            </div>
                        </div>
                    </form>
                    <form action="/createCandidateFromFile" method="POST">
                        <div class="form-row">
                            <div class="col-lg-7">

                                <strong>Candidate List:</strong><input type="file"  name="listfile" class="form-control-file my-1 p-2"
                                    required>
                            </div>
                        </div>



                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 mt-2 mb-2"> Submit </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>




<%- include ('partials/footer') %> 



